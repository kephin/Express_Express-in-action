<% include _header %>

  <div class="container">
    <h1>Edit your profile</h1>
    <form action="/edit" method="post"  class='form-horizontal'>
      <div class="form-group">
        <label for="displayname" class='col-md-2 control-label'>Display name</label>
        <div class="col-md-10">
          <input name="displayname" type="text" class="form-control" placeholder="Display name" value="<%= currentUser.displayname || "" %>" autofocus>
        </div>
      </div>

      <div class="form-group">
        <label for="bio" class='col-md-2 control-label'>Biogrphy</label>
        <div class="col-md-10">
          <textarea name="bio" class="form-control" placeholder="Tell us about yourself!"><%= currentUser.bio || "" %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>

    </form>
  </div>

<% include _footer %>
